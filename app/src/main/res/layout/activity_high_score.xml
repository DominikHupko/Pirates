    <LinearLayout
        android:id="@+id/podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/silverImageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar1_silver" />
            <TextView
                android:id="@+id/silverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="User#2345"/>
            <TextView
                android:id="@+id/silverScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Score"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:elevation="4dp">
            <ImageView
                android:id="@+id/goldImageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar1_gold" />
            <TextView
                android:id="@+id/goldName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="User#2345"/>
            <TextView
                android:id="@+id/goldScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Score"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:elevation="4dp">
            <ImageView
                android:id="@+id/bronzeImageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar1_bronze" />
            <TextView
                android:id="@+id/bronzeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="User#2345"/>
            <TextView
                android:id="@+id/bronzeScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Score"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/podium_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/winners_podium"
        android:maxWidth="100dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:paddingTop="23dp"
        android:paddingBottom="28dp"
        android:paddingHorizontal="27dp"
        android:background="@drawable/score_board"
        app:layout_constraintTop_toBottomOf="@id/podium_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttons"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:text="Home"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:onClick="Home"
        app:backgroundTint="@null"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/log_button"/>

    <Button
        android:text="My scores"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:onClick="LocalScore"
        android:textSize="15sp"
        app:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/log_button"/>

    <Button
        android:text="Global"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="GlobalScore"
        android:textSize="15sp"
        app:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/log_button"/>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
