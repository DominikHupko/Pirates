<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:background="@drawable/pop_up">

    <ImageView
        android:id="@+id/close_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:background="@drawable/close_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/soundToggle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sound_on"
        android:onClick="toggleSound"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/close_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/log_out_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@null"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:elevation="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTintMode="@null"
        android:gravity="center"
        android:background="@drawable/log_button"
        app:layout_constraintTop_toBottomOf="@id/soundToggle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
